<%= render 'shared/errors',obj: @article %>

<div class='row' style="height:47.6em; max-width: 99%;">
  <div class='col-8' style="margin: 0 28%;">
    <%= form_for(@article, :html => {role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-2">
        <%= f.label :title %>
      </div>
      <div class="col-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-2">
        <%= f.label :description %>
      </div>
      <div class="col-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-offset-6 col-9" style="margin-left: 20%;" >
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
    <% end %>
    <div class="col-10 col-offset-1" style="margin-left:10%;">
      [ <%= link_to "cancel request  and view listed articles", articles_path %> ]
    </div>
  </div>
</div>
